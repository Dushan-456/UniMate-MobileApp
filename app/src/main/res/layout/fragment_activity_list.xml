                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <!-- Timeline Dot & Line -->
                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <!-- Dot -->
                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/timeline_dot_done"
                        android:layout_marginTop="8dp" />

                    <!-- Vertical Line -->
                    <View
                        android:layout_width="2dp"
                        android:layout_height="100dp"
                        android:background="#D0D0D0" />
                </LinearLayout>

                <!-- Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"

                    android:backgroundTint="#E4DBFA">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Time -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="09:00 - 09:30"
                            android:textSize="12sp"
                            android:textColor="#555555" />

                        <!-- Title -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Coffee with Julia at Coffee Adda"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp"
                            android:textColor="#000000" />

                        <!-- Duration + Status -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="30 Minutes"
                                android:textSize="12sp"
                                android:textColor="#888888" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Done"
                                android:textSize="12sp"
                                android:textColor="#ffffff"
                                android:background="@drawable/tag_done"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="4dp"
                                android:backgroundTint="#9A73FF"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
